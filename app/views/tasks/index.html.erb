<h1>My tasks</h1>


<div class="container">
  <% @tasks.each do |task| %>
    <%= link_to task.title, task_path(task) %>
    <p><%= task.details%></p>
    <p>Completed: <%= task.completed %></p>
    <%= link_to "Delete task", task_path(task), method: :delete %>
  <% end %>
</div>


<%= link_to 'Create a new task', new_task_path %>
